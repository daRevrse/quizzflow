{
  "name": "quiz-app-backend",
  "version": "1.0.0",
  "description": "Backend de l'application de quiz en temps réel",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    
    "db:create": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS quiz_app; CREATE USER IF NOT EXISTS 'quiz_user'@'localhost' IDENTIFIED BY 'password'; GRANT ALL PRIVILEGES ON quiz_app.* TO 'quiz_user'@'localhost'; FLUSH PRIVILEGES;\"",
    
    "analyze:indexes": "node scripts/cleanIndexes.js",
    "clean:indexes": "node -e \"require('./scripts/cleanIndexes').cleanDuplicateIndexes().then(() => process.exit())\"",
    "sync:optimized": "node scripts/syncModelsOptimized.js",
    
    "db:diagnose": "node -e \"require('./scripts/cleanIndexes').analyzeIndexes().then(() => process.exit())\"",
    "db:clean": "node -e \"require('./scripts/cleanIndexes').cleanDuplicateIndexes().then(() => process.exit())\"",
    "db:reset": "node scripts/syncModelsOptimized.js",
    "db:status": "node -e \"require('./scripts/cleanIndexes').showFinalStatus().then(() => process.exit())\"",
    
    "models:test": "node scripts/testModels.js",
    "participants:clean": "node scripts/cleanParticipants.js",
    "debug:persistence": "node scripts/debugPersistence.js",
    "debug:mysql": "node scripts/debugMySQL.js",
    
    "setup:dev": "npm run db:reset && npm run dev",
    "health:check": "node -e \"require('./config/database').checkIndexHealth().then(healthy => { console.log(healthy ? '✅ DB saine' : '❌ DB problématique'); process.exit(healthy ? 0 : 1); })\""
  },
  "keywords": [
    "quiz",
    "socket.io",
    "express",
    "mysql",
    "sequelize",
    "real-time"
  ],
  "author": "Quiz App Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "sequelize": "^6.35.2",
    "mysql2": "^3.6.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}